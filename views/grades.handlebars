const mapDateToDay = (grade) => {
    const result = {};

    grade.forEach((att, i) => {
        const tempDay = new Date(att.class_date).getUTCDay();
        const dayOfWeek = weekday[tempDay];
        result[dayOfWeek] = att;
    })

